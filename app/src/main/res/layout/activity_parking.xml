<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".features.parkingAndTransportationServices.ParkingActivity">

    <ImageView
        android:id="@+id/yourImageViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/map_img"
        android:alpha="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/sara_issa_arrow_back"
            android:drawableTint="#000"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="Parking and Transportation services"
            android:textColor="#000"
            android:textSize="21.5sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view1"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/dark_green" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Car Parking"
                android:textColor="@color/dark_green"
                android:textSize="15sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/dark_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/parkingBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Parking"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/parking_icon"
                app:iconGravity="textEnd"
                app:iconPadding="150dp"
                app:iconSize="50dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view3"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/dark_green" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Public Transportation"
                android:textColor="@color/dark_green"
                android:textSize="15sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/dark_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/busBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Bus"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/bus_icon"
                app:iconGravity="textEnd"
                app:iconPadding="190dp"
                app:iconSize="50dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/taxiBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Taxi"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/taxi_icon"
                app:iconGravity="textEnd"
                app:iconPadding="190dp"
                app:iconSize="50dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view5"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@color/dark_green" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:text="Find Locations"
                android:textColor="@color/dark_green"
                android:textSize="15sp" />

            <View
                android:id="@+id/view6"
                android:layout_width="50dp"
                android:layout_height="1.5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@color/dark_green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/mapBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="350dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/dark_green"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Map"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/map_icon"
                app:iconGravity="textEnd"
                app:iconPadding="190dp"
                app:iconSize="50dp"
                app:iconTint="@color/white"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>