<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaraIssaMainActivity">

  <ImageView
      android:id="@+id/imageView1"
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:layout_marginTop="-130dp"
      android:background="@drawable/sara_issa_circle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:layout_marginStart="-130dp"
      android:layout_marginTop="-30dp"
      android:background="@drawable/sara_issa_circle"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/cyberSecurity"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="25dp"
      android:layout_marginTop="80dp"
      android:text="Cyber Security"
      android:textColor="#000"
      android:textSize="30sp"
      android:textStyle="bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/desCyberSecurity"
      android:layout_width="420dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="5dp"
      android:layout_marginTop="160dp"
      android:text="The mission of the Bachelor Program in Cybersecurity (BSc-CSEC) is to provide a competitive top-quality education in cybersecurity, that equips students with the essential and advanced skills and abilities to become professional cybersecurity developers, entrepreneurs and leaders that are able to protect and develop innovative cybersecurity software solutions and reliable secure software systems, so they may contribute to advancing both the economy through enabling safe cyber-empowered businesses and, more generally, the software industry in Palestine."
      android:textColor="#000"
      android:textSize="20sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="490dp"
      android:text="Type:"
      android:textColor="#000"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageViewType"
      android:layout_width="170dp"
      android:layout_height="60dp"
      android:layout_marginStart="200dp"
      android:layout_marginTop="470dp"
      android:background="@drawable/sara_issa_rectangle2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/master"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="240dp"
      android:layout_marginTop="485dp"
      android:text="Bachelor"
      android:textColor="#000"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/department"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="550dp"
      android:text="Department:"
      android:textColor="#000"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageViewDepartment"
      android:layout_width="170dp"
      android:layout_height="60dp"
      android:layout_marginStart="200dp"
      android:layout_marginTop="540dp"
      android:background="@drawable/sara_issa_rectangle2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/www"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="210dp"
      android:layout_marginTop="555dp"
      android:text="Computer Science"
      android:textColor="#000"
      android:textSize="18sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/hours"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="625dp"
      android:text="Credit Hours:"
      android:textColor="#000"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageViewHours"
      android:layout_width="170dp"
      android:layout_height="60dp"
      android:layout_marginStart="200dp"
      android:layout_marginTop="610dp"
      android:background="@drawable/sara_issa_rectangle2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/numOfHours"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="260dp"
      android:layout_marginTop="625dp"
      android:text="125"
      android:textColor="#000"
      android:textSize="22sp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/btnBack"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="670dp"
      android:backgroundTint="#B891C280"
      android:contentDescription="Back Button"
      android:drawableLeft="@drawable/sara_issa_arrow_back"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>