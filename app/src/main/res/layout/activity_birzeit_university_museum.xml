<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_green"
    tools:context=".features.librariesandmuseums.BirzeitUniversityMuseum">

    <ImageView
        android:id="@+id/yourImageViewId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/birzeit_uni_museum_1"
        android:alpha="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/sara_issa_arrow_back"
            android:drawableTint="#000"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/museum1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="Birzeit University Museum"
            android:textColor="#000"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/historyBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="History"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:textSize="13sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/history"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="45dp"
                app:iconTint="@color/dark_green"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/aboutBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="About"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:textSize="13sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/museum"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="45dp"
                app:iconTint="@color/dark_green"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/facebookBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Facebook"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:textSize="13sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/facebook"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="45dp"
                app:iconTint="@color/dark_green"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/youtubeBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Youtube"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:textSize="13sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/youtube"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="45dp"
                app:iconTint="@color/dark_green"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/instagramBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Instagram"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:textSize="13sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/instagram"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="45dp"
                app:iconTint="@color/dark_green"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/twitterBtn"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="95dp"
                android:layout_height="80dp"
                android:layout_margin="0dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat"
                android:includeFontPadding="false"
                android:padding="0dp"
                android:text="Twitter"
                android:textAllCaps="false"
                android:textColor="@color/dark_green"
                android:textSize="13sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/twitter"
                app:iconGravity="textTop"
                app:iconPadding="0dp"
                app:iconSize="45dp"
                app:iconTint="@color/dark_green"
                app:strokeColor="@color/dark_green"
                app:strokeWidth="2dp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>